<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.angelica.appuniremigton.VistaUniremington">


    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="515dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/View"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="CORPORACION UNIVERSITARIA REMINGTON"
            android:textColor="black" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/Banner_Uniremington" />

        <Button
            android:id="@+id/Moodle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="12dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="PLATAFORMA MOODLE"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/CorreoIns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="CORREO INSTITUCIONAL"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/q10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="PLATAFORMA Q10"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/Recibo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="RECIBO DE MATRICULA"
            android:textColor="@android:color/background_light" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
